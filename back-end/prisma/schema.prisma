generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  full_name     String
  email         String   @unique
  password_hash String
  is_admin      Boolean  @default(false)
  is_member     Boolean  @default(false)
  created_at    DateTime @default(now()) @db.Timestamptz()

  profile       MemberProfile?
  groupsAsAdmin Group[]
  referralsGiven    BusinessReferral[] @relation("ReferralsGiven")
  referralsReceived BusinessReferral[] @relation("ReferralsReceived")
}

model Group {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  admin_id    Int
  created_at  DateTime @default(now()) @db.Timestamptz()

  admin       User     @relation(fields: [admin_id], references: [id])

  membershipIntentions MembershipIntention[]
}

model MembershipIntention {
  id         Int      @id @default(autoincrement())
  full_name  String
  email      String
  phone      String?
  company    String?
  position   String?
  group_id   Int
  status     String   @default("pending") // pending, approved, rejected
  token      String?  @unique
  created_at DateTime @default(now()) @db.Timestamptz()

  group      Group    @relation(fields: [group_id], references: [id])
}

model MemberProfile {
  id                Int      @id @default(autoincrement())
  user_id          Int      @unique
  bio              String?   @db.Text
  professional_area String?
  interests        String[]
  linkedin_url     String?
  website          String?
  skills           String[]
  goals            String?   @db.Text
  business_size    String?
  target_audience  String?   @db.Text
  created_at       DateTime  @default(now()) @db.Timestamptz()
  updated_at       DateTime  @default(now()) @db.Timestamptz()

  user             User      @relation(fields: [user_id], references: [id])
}

model BusinessReferral {
  id              Int      @id @default(autoincrement())
  from_user_id    Int
  to_user_id      Int
  description     String   @db.Text
  opportunity_type String
  potential_value String
  status          String   @default("pending") // pending, in_progress, closed_won, closed_lost
  feedback        String?  @db.Text
  created_at      DateTime @default(now()) @db.Timestamptz()
  updated_at      DateTime @default(now()) @db.Timestamptz()

  from_user       User     @relation("ReferralsGiven", fields: [from_user_id], references: [id])
  to_user         User     @relation("ReferralsReceived", fields: [to_user_id], references: [id])
}
